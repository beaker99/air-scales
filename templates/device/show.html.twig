{% extends 'base.html.twig' %}

{% block title %}Device{% endblock %}

{% block body %}
    <h1>Device</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ device.id }}</td>
            </tr>
            <tr>
                <th>Serial Number</th>
                <td>{{ device.serialNumber }}</td>
            </tr>
            <tr>
                <th>Mac Address</th>
                <td>{{ device.macAddress }}</td>
            </tr>
            <tr>
                <th>Entity Type</th>
                <td>{{ device.entityType }}</td>
            </tr>
            <tr>
                <th>Firmware Version</th>
                <td>{{ device.firmwareVersion }}</td>
            </tr>
            <tr>
                <th>Notes</th>
                <td>{{ device.notes }}</td>
            </tr>
            <tr>
                <th>Order Date</th>
                <td>{{ device.orderDate ? device.orderDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Ship Date</th>
                <td>{{ device.shipDate ? device.shipDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Tracking Id</th>
                <td>{{ device.trackingId }}</td>
            </tr>
            <tr>
                <th>Sold To</th>
                {% if device.soldTo %}
                    <td>{{ device.soldTo.email }}</td>
                {% else %}
                    <td></td>
                {% endif %}
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_device_index') }}">back to list</a>

    <a href="{{ path('app_device_edit', {'id': device.id}) }}">edit</a>

    {{ include('device/_delete_form.html.twig') }}
{% endblock %}
